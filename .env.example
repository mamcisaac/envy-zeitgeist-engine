# Envy Zeitgeist Engine - Environment Variables
# Copy this file to .env and fill in your actual values

# === Required API Keys ===

# SerpAPI for Google/News search
SERPAPI_API_KEY=your_serpapi_key_here

# OpenAI for GPT-4o embeddings and summaries
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic for Claude-Sonnet/Opus long prompts
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Reddit API credentials (https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=envy-zeitgeist-engine/1.0.0 (by /u/your_username)

# Supabase (Managed Postgres with PGVector)
# Get from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key

# === Optional API Keys ===

# YouTube API (falls back to unauth scrape if missing)
YOUTUBE_API_KEY=your_youtube_api_key_here

# === Database Configuration ===

# Direct PostgreSQL connection (alternative to Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/envy_zeitgeist

# === Application Settings ===

# Environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum number of mentions to collect per run
MAX_MENTIONS_PER_RUN=1000

# Clustering parameters
MIN_CLUSTER_SIZE=3
MIN_SAMPLES=2

# === CI/CD Environment Variables ===
# These are typically set in GitHub Secrets, not in .env

# Container registry
CONTAINER_REGISTRY=ghcr.io
CONTAINER_REGISTRY_USERNAME=github_username
CONTAINER_REGISTRY_TOKEN=github_token

# Deployment targets
STAGING_URL=https://staging.envy-zeitgeist.example.com
PRODUCTION_URL=https://envy-zeitgeist.example.com

# Notification webhooks (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# === Test Environment Variables ===
# Used in CI/CD for testing

TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/test_envy_zeitgeist
TEST_SUPABASE_URL=http://localhost:5432
TEST_SUPABASE_ANON_KEY=test_key